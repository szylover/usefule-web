{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "Usefule Web",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:5173",
    "distDir": "../apps/portal/dist"
  },
  "tauri": {
    "windows": [
      {
        "title": "Usefule Web Portal",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "security": {
      "csp": null
    }
  },
  "appDir": "../apps/portal"
}
