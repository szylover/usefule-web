{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "Useful Portal",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../apps/portal/dist"
  },
  "identifier": "com.useful.portal",
  "app": {
    "windows": [
      {
        "title": "Useful Portal",
        "width": 1200,
        "height": 780,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.useful.portal"
  },
  "plugins": {
    "shell": {
      "scope": ["open"]
    }
  }
}
