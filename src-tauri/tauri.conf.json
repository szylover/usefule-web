{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "Useful Web",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:5173",
    "distDir": "../apps/portal/dist"
  },
  "tauri": {
    "windows": [
      {
        "title": "Useful Web Portal",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.useful-web.portal"
    },
    "security": {
      "csp": null
    }
  },
  "app": {
    "security": {
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": ["shell:allow-open"]
        }
      ]
    }
  },
  "appDir": "../apps/portal"
}
