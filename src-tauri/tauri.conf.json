{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Useful Portal",
  "version": "0.1.0",
  "identifier": "com.useful.portal",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../apps/portal/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Useful Portal",
        "width": 1200,
        "height": 780,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "scope": ["open"]
    }
  }
}
